[Unit]
Description=Roundcube
After=dovecot.container
Requires=dovecot.container

[Service]
Restart=on-failure

[Container]
Pod=mail.pod
Image=docker.io/roundcube/roundcubemail:1.5.x-apache
AutoUpdate=registry
CgroupsMode=no-conmon
Environment=ROUNDCUBEMAIL_DB_TYPE=sqlite
Volume=/var/opt/containers/roundcube/db:/var/roundcube/db:z
Volume=/var/opt/containers/roundcube/config:/var/roundcube/config:z
Volume=/etc/pki/ca-trust/source/anchors/tamado-ca.crt:/var/roundcube/ca.crt:ro
Memory=1g