[Unit]
Description=Name Server CoreDNS
Requires=ns-dnsproxy.container
After=ns-dnsproxy.container

[Service]
Restart=on-failure

[Container]
Pod=ns.pod
Image=docker.io/coredns/coredns:latest
AutoUpdate=registry
Volume=/var/containers/ns/coredns/Corefile:/Corefile:z
Volume=/var/containers/ns/coredns/etc/coredns:/etc/coredns:z
