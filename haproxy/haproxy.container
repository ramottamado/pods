[Unit]
Description=HAProxy Server

[Service]
Restart=on-failure

[Container]
Image=docker.io/haproxytech/haproxy-alpine:3.2
AutoUpdate=registry
CgroupsMode=split
HostName=haproxy.saoirse.home.arpa
DNS=10.88.0.2
IP=10.88.0.101
Volume=/var/opt/containers/haproxy:/usr/local/etc/haproxy:z
Memory=1gb

[Install]
WantedBy=default.target
