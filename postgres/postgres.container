[Unit]
Description=PostgreSQL Server

[Container]
Exec=postgres
Image=docker.io/library/postgres:18
AutoUpdate=registry
Network=saoirse.network
DNS=10.192.0.10
IP=10.192.0.100
IP6=fd00::100
HostName=postgres.saoirse.home.arpa
NetworkAlias=postgres.saoirse.home.arpa
Secret=source=postgres-password,type=env,target=POSTGRES_PASSWORD
Volume=postgres-data.volume:/var/lib/postgresql:z
ShmSize=256m
Memory=1g

[Install]
WantedBy=default.target
